{
  "log": { "level": "info", "format": "text", "file": "" },
  "monitor": {
    "interval_ms": 1000,
    "weights": { "net": 1.0, "disk": 1.0 },
    "active_threshold_mbps": 50,
    "idle_threshold_pct": 20,
    "min_active_sec": 5,
    "min_idle_sec": 10,
    "interfaces_include": [],
    "interfaces_exclude": [],
    "disks_include": [],
    "disks_exclude": []
  },
  "exceptions": {
    "process_names": ["steam", "onedrive", "syncthing"],
    "process_paths": [],
    "ports_exclude": [6881, 6882],
    "ips_exclude": [],
    "interfaces_exclude": []
  },
  "sleep": {
    "mode": "system",
    "fallback": "suspend",
    "idle_grace_sec": 60,
    "immediate_on_finish": true
  },
  "tray": { "show": true }
}
